<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MailApp">
  <Id>YOUR-ADDIN-ID-HERE</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Company Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Your Add-in Name"/>
  <Description DefaultValue="Your Add-in Description"/>

  <IconUrl DefaultValue="https://example.com/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://example.com/high-res-icon.png"/>

  <SupportUrl DefaultValue="https://example.com/support"/>

  <AppDomains>
    <AppDomain>https://example.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://example.com/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>
</OfficeApp>
